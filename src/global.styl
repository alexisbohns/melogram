body
    background-image url('https://olixcgppvluthbgcjtkf.supabase.co/storage/v1/object/public/versions/test/night.jpg')
    background-size cover
    animation gradient-animation 10s cubic-bezier(0.1, -0.6, 0.2, 0) infinite

    color white

    @keyframes gradient-animation
      0%
        backdrop-filter hue-rotate(0deg)
      50%
        backdrop-filter hue-rotate(40deg)
      100%
        backdrop-filter hue-rotate(0deg)